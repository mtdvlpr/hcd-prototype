{
  "editor.formatOnPaste": true,
  "editor.formatOnSave": true,
  "editor.acceptSuggestionOnEnter": "smart",
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit"
  },
  "cSpell.ignorePaths": [
    ".vscode",
    ".yarnrc.yml",
    "LICENSE",
    "node_modules",
    "yarn.lock"
  ],
  "cSpell.enabled": true,
  "cSpell.language": "en,nl",
  "liveServer.settings.root": "/docs",
  "liveServer.settings.mount": [["/hcd-prototype/", "./docs"]],
  "cSpell.ignoreWords": ["transform"],
  "cSpell.words": [
    "alice",
    "aliceblue",
    "Avenir",
    "blachedalmond",
    "gainsboro",
    "navajowhite",
    "peru",
    "rebeccapurple"
  ]
}
